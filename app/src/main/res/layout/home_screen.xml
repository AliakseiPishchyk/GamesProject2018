<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.ul.gamesproject.homeScreen">

    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Button"
        android:layout_width="191dp"
        android:layout_height="47dp"
        android:layout_marginEnd="96dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="22dp"
        android:onClick="onClickMyFavourites"
        android:onclick="onClickMyFavourites"
        android:text="My Favourites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Button"
        android:layout_width="191dp"
        android:layout_height="47dp"
        android:layout_marginBottom="257dp"
        android:layout_marginEnd="96dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="21dp"
        android:onClick="onClickRecommendedForMe"
        android:onclick="onClickRecommendedForMe"
        android:text="Recommended for Me"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Button"
        android:layout_width="191dp"
        android:layout_height="47dp"
        android:layout_marginEnd="96dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="78dp"
        android:onClick="onClickSearchGames"
        android:onclick="onClickSearchGames"
        android:text="Search Games"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
